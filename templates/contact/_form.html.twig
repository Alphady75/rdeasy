{{ form_start(form, {attr: {class: "contact__form", 'data-aos': "fade-up", 'data-aos-duration': "1500"}}) }}
<div class="row">
	<div class="col-md-6">
		<div class="form-group">
			{{form_widget(form.nom)}}
		</div>
	</div>
	<div class="col-md-6">
		<div class="form-group">
			{{form_widget(form.email)}}
		</div>
	</div>
	<div class="col-md-6">
		<div class="form-group">
			{{form_widget(form.telephone)}}
		</div>
	</div>
	<div class="col-md-6">
		<div class="form-group">
			{{form_widget(form.sujet)}}
		</div>
	</div>
	<div class="col-md-12">
		<div class="form-group">
			{{form_widget(form.message)}}
		</div>
	</div>
	<div class="col-md-4 text-start">
		<div class="btn_block">
			<button type="submit" class="btn puprple_btn ml-0">Soumettre</button>
			<div class="btn_bottom"></div>
		</div>
	</div>
</div>
{{ form_end(form) }}
